<script>
$(document).ready(function(){
    $(".clickable1").click(function(){
             $(this).addClass("show1light");
    }); 
 $(".clickable2").click(function(){
             $(this).addClass("show2light");
    }); 
 $(".clickable3").click(function(){
             $(this).addClass("show3light");
    }); 
 $(".clickable4").click(function(){
             $(this).addClass("show4light");
    }); 
 $(".clickable5").click(function(){
             $(this).addClass("show5light");
    }); 
    $(".hideclickable1").click(function(){
             $(".clickable1").removeClass("show1light");
    }); 
  $(".hideclickable2").click(function(){
             $(".clickable2").removeClass("show2light");
    });
  $(".hideclickable3").click(function(){
             $(".clickable3").removeClass("show3light");
    });    
  $(".hideclickable4").click(function(){
             $(".clickable4").removeClass("show4light");
    });    
  $(".hideclickable5").click(function(){
             $(".clickable5").removeClass("show5light");
    });        
 $("#hide1").click(function(){
        $("#timelinethefirst").hide();
    });
    $("#show1").click(function(){
        $("#timelinethefirst").show();
    });
    $("#hide2").click(function(){
        $("#timelinethesecond").hide();
    });
    $("#show2").click(function(){
        $("#timelinethesecond").show();
    });
    $("#hide3").click(function(){
        $("#timelinethethird").hide();
    });
    $("#show3").click(function(){
        $("#timelinethethird").show();
    })
$("#hide4").click(function(){
        $("#timelinethefourth").hide();
    });
    $("#show4").click(function(){
        $("#timelinethefourth").show();
    })
$("#hide5").click(function(){
        $("#timelinethefifth").hide();
    });
    $("#show5").click(function(){
        $("#timelinethefifth").show();
    })
});
</script>
